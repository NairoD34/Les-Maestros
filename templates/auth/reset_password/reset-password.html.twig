{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <div class="check_email_container">
        <div class="info_user_content">
            <h1 class="text-center mb-4">{{ title }}</h1>
            <div class="content-form">
                <form method="post" class="needs-validation" novalidate>
                    {{ form_start(form) }}
                    <div>
                        <label for="{{ form.Password.vars.id }}" class="form-label"></label>
                        {{ form_widget(form.Password, {'attr': {'class': 'form-input', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
                        {{ form_errors(form.Password) }}
                    </div>

                    <div class="submit-container">
                        <button type="submit">Changer le mot de passe</button>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
