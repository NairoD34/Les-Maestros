

<h1 class="test">Liste des Promotions</h1>


<a href="{{ path('promotion_create') }}">Ajouter une nouvelle promotion</a>

<!-- Tableau affichant les promotions existantes -->
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Libellé</th>
            <th>Taux de Promotion</th>
            <th>Code de Promotion</th>
        </tr>
    </thead>
    <tbody>
        {% for promotion in promotions %}
        <tr>
            <td>{{ promotion.id }}</td>
            <td>{{ promotion.libelle }}</td>
            <td>{{ promotion.tauxPromotion }}%</td>
            <td>{{ promotion.codePromotion }}</td>
            <td><a href="{{ path('promotion_edit', {'id': promotion.id}) }}">Modifier</a>
            <a href="{{ path('promotion_delete', {'id': promotion.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette promotion ?');">Supprimer</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">Aucune promotion trouvée</td>
        </tr>
        {% endfor %}
    </tbody>
</table>







   
