{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<div class="container-fluid vh-100 form-sign-in">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
                {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <form method="post" class="p-4 bg-light rounded">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Bonjour cher client !</h1>
                
                <div class="form-group">
                    <label for="inputUsername">Email</label>
                    <input type="text" value="{{ username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="form-group text-center ">
                    <button class=" button-nl" type="submit">
                        Sign in
                    </button>
                </div>
            </form>

            <div class="text-center mt-3 d-flex justify-content-around responsive-redirect-si">
                <a href='{{ path('app_register') }}'>Je crée un compte</a><br>
                <a href='{{ path('app_reset_password_check_email') }}'>Mot de passe oublié ?</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
