<body>
    {% block header %}
        {% block nav %}

 
     <header>
    <nav id="navbar" class="navbar navbar-expand-md bg-light navbar-light">
        <div class="container-fluid">

            <!-- Logo de la navbar -->
            <a  class="navbar-brand text-uppercase fw-bold" href="{{ path('app_index') }}">
                <img src="{{ asset('images/logo(1).png') }}" alt="Logo" id="logo">
            </a>

            <!-- Bouton burger pour les petits écrans -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Contenu de la navbar -->
            <div class="collapse navbar-collapse navlinks" id="navbarSupportedContent">
                <ul class="navbar-nav d-flex position-hover align-items-center justify-content-center mx-auto text-center w-100">
                    <!-- Lien Accueil -->
                    
                    <li class="nav-item d-flex align-items-center ml-5 col-auto active" style="white-space: nowrap;">
                        <a style='color: rgba(223, 190, 49, 1)!important' aria-current="page" href="{{ path('app_index') }}">Accueil</a>
                        </li>
                         
                        {{ render(controller('App\\Controller\\CategorieController::list')) }}
                    
                   
                </ul>
                  <!-- Déconnexion et profil pour la version de bureau -->
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item ">
                                <a class="nav-link" href="{{ path('app_admin_logout') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"/></svg>
                                </a>
                            </li>
                        {% else %}
                        <div class="right-part d-flex ml-5 justify-content-center align-items-center">
                            <li id='icone' class="nav-item d-flex mr-3">
                                <a id="deco" class="nav-link" href="{{ path('app_logout') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"/></svg>
                                </a>
                                </li>
                                <li id='icone' class="nav-item d-flex mr-3">
                                <!-- Profil -->
                                <a id='user' class="nav-link d-flex align-items-center" href="{{ path('app_user') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z"/></svg>
                                     <span style="color:var(--main);">{{ app.user.prenom }}</span>
                                </a>
                               
                                </li>
                                <li id='icone-panier' class="nav-item d-flex mr-3">
                                <!-- Panier -->
                                <a id="panier" href="{{ path('app_panier') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"/></svg>
                                </a>
                            </li>
                            </div>
                        {% endif %}
                    {% endif %}

                    <!-- Connexion pour la version mobile -->
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        
                            <a class="nav-link p-0 mr-5" href="{{ path('app_login') }}" style="white-space: nowrap;">Connectez-vous</a>
                        
                        <li id='icone-panier' class="nav-item d-flex mr-3">
                                <!-- Panier -->
                                <a id="panier" href="{{ path('app_panier') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"/></svg>
                                </a>
                            </li>
                    {% endif %}
            </div>
        </div>
    </nav>
</header>

            {% endblock %}
            {% endblock %}
     {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
        {% block main %}
        {% endblock %}


{% block footer %}
<footer class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 responsive col-md-4 m-5">
                <h3 class="text-center ">Un problème? contactez<span style="color:var(--main);"> nous</span></h3>
                <form class="bg-light form-contact p-5 mt-4 d-flex flex-column justify-content-around">
                    <input type="text" style="border:2px solid var(--main);" class="mb-4" placeholder="Nom" name="name">
                    <input type="text" style="border:2px solid var(--main);" class="mb-4" placeholder="Prénom" name="surname">
                    <input type="text" style="border:2px solid var(--main);" class="mb-4" placeholder="adresse mail" name="mail">
                    <input type="text" style="border:2px solid var(--main);" class="mb-4" placeholder="Téléphone" name="phone">
                    <textarea id="story" name="story" style="border:2px solid var(--main);" placeholder="Entrer votre message..." class="mb-4" ></textarea>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-md mt-2 bg-white">Envoyez</button>
                    </div>
                </form>
            </div> 
            <div class="col-12 responsive-two col-md-3 m-5 ">
                <div class="footer-nav w-75 mt-5 ml-5 d-flex flex-column align-items-center justify-content-center">
                
                    <li class="nav-item mr-5 text-center responsive-active" style="white-space: nowrap;">
                        <a style='color: rgba(223, 190, 49, 1)!important' aria-current="page" href="{{ path('app_index') }}">Accueil</a>
                        {{ render(controller('App\\Controller\\CategorieController::list')) }}
                    </li>
                    
                </div>
            </div>
            <div class="col-12 col-md-3 mt-5 d-flex flex-column responsive-three align-items-center">
                <h3 class='text-center mb-4'>Suivez <span style="color:var(--main);">nous</span></h3>
                <div class="social-icons ms-auto ml-5 mt-3 w-50 d-flex flex-column align-items-start justify-content-center">
                    <div class="d-flex align-items-center ">
                        <i class="fa fa-instagram mb-3"></i>
                        <p class="insta">MSymfony</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-facebook mb-3"></i>
                        <p class="fb">MSymfony</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-whatsapp mb-3"></i>
                        <p class="wa">+33 7 30 90 07 67</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" height="40" width="35" fill="#DFBE31" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/></svg>
                        <p class="twitter">MSymfony</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

</footer>
{% endblock %}
