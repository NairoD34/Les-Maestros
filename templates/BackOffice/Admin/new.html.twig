{% extends 'base_admin.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <div class="info_user_container">
        <div class="info_user_content">
            <div class="title-container">
                <a href="{{ path('app_category_list_admin') }}" class="come-back">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                        <path fill="#000000"
                              d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
                    </svg>
                </a>
                <h2>{{ title }}</h2>
            </div>
            {% block form_errors %}
                {% if errors|length > 0 %}
                    <ul class='log-danger'>
                        {% for error in errors %}
                            <li> {{ error.message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endblock form_errors %}
            <div class="content-form">
                {{ form_start(form) }}
                <div>
                    {{ form_label(form.lastname, 'Nom') }}
                    {{ form_widget(form.lastname) }}
                </div>
                <div>
                    {{ form_label(form.firstname, 'Pr√©nom') }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div>
                    {{ form_label(form.email, 'Adresse email') }}
                    {{ form_widget(form.email) }}
                </div>
                <div>
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password) }}
                </div>

                <div class="submit-container">
                    <button type='submit'>Soumettre</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
