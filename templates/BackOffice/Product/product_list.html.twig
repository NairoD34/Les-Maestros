{% extends 'base_admin.html.twig' %}

{% block title %}
    {{ title }} {# Titre de la page, récupéré dynamiquement #}
{% endblock %}

{% block main %}
    {# Section principale pour afficher la liste des produits #}
    <section class="admin-section">
        <div class="title-container">
            {# Lien pour revenir au tableau de bord #}
            <a href="{{ path('app_admin_dashboard') }}" class="come-back">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" aria-label="bouton revenir en arrière" alt="bouton revenir en arrière">
                    <title>Revenir en arrière</title>
                    <path fill="#000000"
                          d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
                </svg>
            </a>
            <h2>{{ title }}</h2> {# Titre principal de la section #}
        </div>
        <div class="details-container">
            {# Lien pour ajouter un nouveau produit #}
            <a href="{{ path('app_new_product') }}">Ajouter un produit</a>
            <div class="details-content">
                {# Boucle pour afficher chaque produit #}
                {% for item in product %}
                    <div class="details-body">
                        {# Boucle pour afficher les photos du produit #}
                        {% for photo in item.photos %}
                            <div class="admin-image">
                                <img src="{{ photo.urlPhoto }}" alt="{{ item.title }}"> {# Affiche l'image du produit #}
                            </div>
                        {% endfor %}
                        <div class="admin-action">
                            {# Lien vers la page de détails du produit #}
                            <a href="{{ path('app_product_show_admin', { 'id': item.id }) }}">
                                <div>
                                    <h4>{{ item.title }}</h4> {# Affiche le titre du produit #}
                                </div>
                            </a>
                        </div>
                        <div class="action-container">
                            {# Lien pour mettre à jour le produit #}
                            <a href="{{ path('app_update_product', { 'id': item.id }) }}">Mettre à jour</a>
                            {# Inclusion du formulaire de suppression du produit #}
                            {{ include('BackOffice/Product/product_delete.html.twig', { 'id': item.id }) }}
                        </div>
                    </div>
                {% else %}
                    <p>Aucun produit enregistré</p> {# Message si aucun produit n'est trouvé #}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}