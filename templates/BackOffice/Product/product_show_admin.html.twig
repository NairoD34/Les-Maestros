{% extends 'base_admin.html.twig' %}

{% block title %}
    {{ title }} {# Titre de la page, récupéré dynamiquement #}
{% endblock %}

{% block main %}
    {# Conteneur principal pour afficher les détails du produit #}
    <div class="info_user_container">
        <div class="info_user_content">
            <div class="content-form">
                <div class="show_adress">
                    <div class="title-container">
                        {# Lien pour revenir à la liste des produits #}
                        <a href="{{ path('app_product_list_admin') }}" class="come-back">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" aria-label="bouton revenir en arrière" alt="bouton revenir en arrière">
                                <title>Revenir en arrière</title>
                                <path fill="#000000"
                                      d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
                            </svg>
                        </a>
                        <h2>{{ title }}</h2> {# Titre principal de la section #}
                    </div>

                    {# Affichage des détails du produit #}
                    <div>
                        <span>Nom:</span>
                        <p>{{ product.title }}</p> {# Affiche le titre du produit #}
                    </div>
                    <div>
                        <span>Description de l'article:</span>
                        <p>{{ product.description }}</p> {# Affiche la description du produit #}
                    </div>
                    <div>
                        <span>Prix:</span>
                        <p>{{ product.TaxFreePrice }} € HT</p> {# Affiche le prix hors taxes du produit #}
                    </div>
                    {# Boucle pour afficher chaque photo du produit #}
                    {% for photo in product.photos %}
                        <div class="img-details">
                            <img src="{{ photo.urlPhoto }}" alt="{{ product.title }}"> {# Affiche l'image du produit #}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}