{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <div class="info_user_container">
        <div class="info_user_content">
            <div class="content-form">
                <div class="show_adress">
                    <div class="title-container">
                        <a href="{{ path('app_list_adresse') }}" class="come-back">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                                <path fill="#000000"
                                      d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
                            </svg>
                        </a>
                        <h2>{{ title }}</h2>
                    </div>
                    <div>
                        <span>Numero de voie :</span>
                        <p>{{ adresse.number }}</p>
                    </div>
                    <div>
                        <span>Rue :</span>
                        <p>{{ adresse.street }}</p>
                    </div>
                    <div>
                        <span>Complement :</span>
                        <p>{{ adresse.complement }}</p>
                    </div>
                    <div>
                        <span>Ville :</span>
                        <p class="uppercase">{{ adresse.city.name }}</p>
                    </div>
                    <div>
                        <span>Code postal :</span>
                        <p>{{ adresse.ZIPcode.title }}</p>
                    </div>
                    <div>
                        <span>Département :</span>
                        <p class="uppercase">{{ adresse.city.county.name }}</p>
                    </div>
                    <div>
                        <span>Région :</span>
                        <p class="uppercase">{{ adresse.city.county.region.name }}</p>
                    </div>

                    <a class="maj" href="{{ path('app_update_adresse', { 'id' : adresse.id }) }}">Mettre à
                        jour</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
