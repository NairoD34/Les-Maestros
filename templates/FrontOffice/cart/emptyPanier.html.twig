{% extends 'base.html.twig' %}

{% block title %}Panier vide {% endblock %}
{% block main %}
    <div class="empty-order">
        <div>
            {% if not app.user %}
                <h2>Vous devez vous connecter pour accéder à un panier.</h2>
                <div class="button-empty">
                    <a href="{{ path('app_login') }}" class="btn button-nl m-3">Se connecter</a>
                    <a href="{{ path('app_index') }}" class="redirect-btn-product">Retour à la sélection des
                        produits</a>
                </div>
            {% else %}
                <h1>Panier Vide</h1>
                <p>Votre panier est actuellement vide.</p>
                <a href="{{ path('app_index') }}" class="redirect-btn-product">Retour à la sélection des produits</a>
            {% endif %}
        </div>
    </div>
{% endblock %}