{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <h2>{{ title }}</h2>
    {% if is_granted('ROLE_ADMIN') %}
    <h3><a href="{{ path('app_new_categorie') }}">Ajouter une catégorie</a></h3>
    {% endif %}
    
    {% for item in categorie %}
        <tr>
            <div class="row">
    <div class="d-flex justify-content-center gap-5">
         <div class="card border p-3 bg-light mb-4" style="width: 15rem; height: 15rem;">
             <div class="card-body d-flex align-items-center">
                <a href ="{{ path('app_categorie_show_admin', { 'id': item.id })}}" class="card-text text-decoration-none">
             <h5 class="card-title text-center">{{ item.libelle }}</h5><br>
             <p class="card-text text-center">{{ item.description }}</p>
             </div>
         </div></a>
            <td><a href="{{ path('app_update_categorie', { 'id': item.id })}}">Mettre à jour</a></td>
            <td>{{ include('admin/categorie_delete.html.twig', { 'id': item.id })}}</td>
            </div>
            </div>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">Aucun enregistrement</td>
        </tr>
    {% endfor %}
    </table>
    <form>
        <input type='text' name='nom' placeholder='recherchez par libelle' value='{{ libelle }}'>
        <input type='submit' name='submit' value='rechercher'>
    </form>
{% endblock %}