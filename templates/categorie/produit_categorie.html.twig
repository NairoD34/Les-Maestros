

{% extends 'base.html.twig' %}

{% block main %}
    <h1>Produits de la catégorie {{ categorie.libelle }}</h1>
    <div class='banner'>
    {% for photo in photos %}
    <img src="{{ photo.URLPhoto }}"  alt='test'/>
    {% endfor %}
    </div>
    {% if produits is null %}
        <p>Aucun produit trouvé pour cette catégorie.</p>
    {% else %}
        <ul>
            {% for produit in produits %}
                <li><a href='{{ path('app_show_produit', {'id':produit.id})}}'>{{ produit.libelle }} - {{ produit.prixHt }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
