{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adresse') }}
{% endblock %}
{% block main %}
<div class="example-wrapper">
    <h1>Mon adresse</h1>


    <form method='POST' id="createAdresse">
        <p>(<span>*</span>)Champs obligatoires</p>
        <div class="form-group">
            <label for="region">Region <span>*</span></label>
            <input type="text" class="form-control" name="region" id="region" required placeholder="ex: Occitanie">
            
            <select id="displayRegions" style="display: none;"></select>
        </div>
       
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value='Enregistrer' name="submitAdresse" id="submitAdresse">
        </div>
    </form>
    
    </div>
    {% if message %}
        <div>{{ message }}</div>
    {% endif %}
    
    {% endblock %}