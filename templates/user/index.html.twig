{% extends 'base.html.twig' %}

{% block title %}Information compte{% endblock %}

{% block main %}
<section class="section-info">
    <h1 class="text-center my-5">{{ title }}</h1>

    <div class="container">
        <div class="row justify-content-center">

            <div class="col-12 col-md-4 mb-4 user-panel">
                <a href="{{ path('app_user_account', { 'id': users.id }) }}" class="text-decoration-none">
                    <div class="card card-design">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" height="50" width="36" fill="#DFBE31" viewBox="0 0 448 512"><path  d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/></svg>
                            <h5 class="card-title text-center mt-3">Informations personnelles</h5>
                        </div>
                    </div>
                </a>
            </div>

            {% if users.adresses is empty %}
            <div class="col-12 col-md-4 mb-4 user-panel">
                <a href="{{ path('app_create_adresse') }}" class="text-decoration-none">
                    <div class="card card-design">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" fill="#DFBE31" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M429.6 92.1c4.9-11.9 2.1-25.6-7-34.7s-22.8-11.9-34.7-7l-352 144c-14.2 5.8-22.2 20.8-19.3 35.8s16.1 25.8 31.4 25.8H224V432c0 15.3 10.8 28.4 25.8 31.4s30-5.1 35.8-19.3l144-352z"/></svg>
                            <h5 class="card-title text-center mt-3">Adresse</h5>
                        </div>
                    </div>
                </a>
            </div>
            {% else %}
            <div class="col-12 col-md-4 mb-4 user-panel">
                <a href="{{ path('app_list_adresse') }}" class="text-decoration-none">
                    <div class="card card-design">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" height="50" width="36" fill="#DFBE31" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M429.6 92.1c4.9-11.9 2.1-25.6-7-34.7s-22.8-11.9-34.7-7l-352 144c-14.2 5.8-22.2 20.8-19.3 35.8s16.1 25.8 31.4 25.8H224V432c0 15.3 10.8 28.4 25.8 31.4s30-5.1 35.8-19.3l144-352z"/></svg>
                            <h5 class="card-title text-center mt-3">Adresse</h5>
                        </div>
                    </div>
                </a>
            </div>
            {% endif %}

            <div class="col-12 col-md-4 mb-4 user-panel">
                <a href="{{ path('app_commande_list') }}" class="text-decoration-none">
                    <div class="card card-design">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" height="50" width="36" fill="#DFBE31" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M0 32C0 14.3 14.3 0 32 0h72.9c27.5 0 52 17.6 60.7 43.8L257.7 320c30.1 .5 56.8 14.9 74 37l202.1-67.4c16.8-5.6 34.9 3.5 40.5 20.2s-3.5 34.9-20.2 40.5L352 417.7c-.9 52.2-43.5 94.3-96 94.3c-53 0-96-43-96-96c0-30.8 14.5-58.2 37-75.8L104.9 64H32C14.3 64 0 49.7 0 32zM244.8 134.5c-5.5-16.8 3.7-34.9 20.5-40.3L311 79.4l19.8 60.9 60.9-19.8L371.8 59.6l45.7-14.8c16.8-5.5 34.9 3.7 40.3 20.5l49.4 152.2c5.5 16.8-3.7 34.9-20.5 40.3L334.5 307.2c-16.8 5.5-34.9-3.7-40.3-20.5L244.8 134.5z"/></svg>
                            <h5 class="card-title text-center mt-3">Historique des commandes</h5>
                        </div>
                    </div>
                </a>
            </div>

        </div> <!-- Fin de la row -->
    </div> <!-- Fin du container-fluid -->
</section>
{% endblock %}


