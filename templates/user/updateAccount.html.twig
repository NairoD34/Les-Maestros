{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <section class="section-info-user">
        <div class="info_user_container">
            <div class="info_user_content">
                <h2>{{ title }}</h2>
                <div class="content-form">
                    {{ form_start(form, {'attr': {'class': 'info_user_form'}}) }}
                    <div>
                        {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.lastname, {'attr': {'class': 'form_input'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.firstname, {'attr': {'class': 'form_input'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form_input'}}) }}
                    </div>

                    <a href="{{ path( 'app_list_adresse' ) }}"> Vos adresses de livraison </a>

                    <div class="submit-container">
                        <button type='submit' name='créer'>Modifier</button>
                    </div>
                    {{ form_end(form) }}
                </div>
                {% if app.user %}
                    <a href="{{ path('app_user') }}">Retour</a>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}

